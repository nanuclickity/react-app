$brand-color = darkorchid;
$border-color = #ccc;
$line-width  = 1px;
$line-color  = $border-color;


:local(.container) {
    display: block;
    position: relative;

    .ui-tree-view-toggle {
        position: relative;
        z-index: 1;
        display: block;
        width: 48px;
        height: 48px;
        border-radius: 3px 3px 0 0;
        border: 1px $border-color solid;
        background-color: #eee;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
    }

    .ui-tree-view-list {
        background-color: #fff;
        border: 1px $brand-color solid;    
        width: 400px;
        height: 500px;
        overflow: auto;

        padding: 12px;

    }

    .ui-tree-view-list {
        position: absolute;
        top: 47px;
        z-index: 2;
    
        will-change: transform;
        transform-origin: top left;
        transform: scale3d(0, 0, 0) translateZ(0);

        transition: transform 0.1s ease-in-out;
    }
}


// Leafs
:local(.container) {
    .tree-leaf {
        padding: 10px 0 10px 10px;
        position: relative;
    }
    .tree-leaf-toggle {
        position: absolute;
        left: -33px;
        top: 14px;
        width: 24px;
        height: 24px;
        background-color: #ddd;
        color: #555;
        border-radius: 50%;
        border: 1px $line-color solid;
        z-index: 2;
        font-size: 15px;
        font-weight: bold;
        text-align: center;
        cursor: pointer;
        &:hover {
            color: $brand-color;    
            border-color: $brand-color;
            background-color: #fff;
        }
    }
    .tree-leaf-inner {
        border-radius: 3px;
        border: 1px $line-color solid;
        padding: 10px;
        margin-left: 24px;
        position: relative;
        background-color: #fff;
        &:after {
            position: absolute;
            content: '';
            height: 1px;
            width: 20px;
            left: -20px;
            top: 26px;
            z-index: -1;
            background-color: $line-color;
        }
        &:hover {
            border-color: $brand-color;
            cursor: default;
        }
    }
    .tree-leaf-children .tree-leaf {
        padding-left: 40px;
        &:after {
            position: absolute;
            left: 44px;
            content: '';
            top: 0;
            bottom: 0;
            width: 1px;
            background-color: $line-color;
        }
        &:last-child {
            &:after {
                bottom: 36px;
            }    
        }
    }
}

:local(.container) .tree-leaf-children {
    overflow: hidden;
    max-height: 0;
    &.is-open {
        max-height: 999px;
    }
    &.is-open > .tree-leaf {
        animation: fadeInDown 0.2s;
    }
}


:local(.container).is-open {
    .ui-tree-view-toggle {
        background-color: #fff;
        color: $brand-color;
        border-color: $brand-color;
    }
    .ui-tree-view-list {
        transform: scale3d(1, 1, 1) translateZ(0);
    }
}



// Leaf item
:local(.container) .tree-leaf-inner {
    display: flex;
    align-items: center;
    .leaf-image {
        width: 32px;
        height: 32px;
        background-color: $line-color;
        border-radius: 50%;
        margin-right: 12px;
        flex-shrink: 0;
    }
    .leaf-title {
        font-size: 14px;
    }
    .leaf-subtitle {
        font-size: 10px;
    }
}


// Search Result
:local(.container) {
    .ui-tree-view-search-result {
        margin: 20px 0;
        .tree-leaf-inner {
            margin: 0;    
        }
    }
    .ui-tree-view-search-input {
        width: 100%;
    }
}
